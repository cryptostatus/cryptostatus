%table{bgcolor: '#fff', cellpadding: '0', cellspacing: '0', style: 'font-family:Arial,Helvetica,sans-serif;color:#000;font-size:17px; background: #fff;', width: '100%'}
  %tbody
    %tr
      %td{align: 'center', valign: 'top'}
        %table{cellpadding: '0', cellspacing: '0', style: 'padding: 0 5px 10px;', width: '598'}
          %tr
            %td{align: 'center', colspan: '3', style: 'background: #000; padding: 50px 0;'}
              %a{href: "#{ENV['CLIENT_URL']}", target: '_blank'}
                = image_tag('logo.png', width: '200')
          %tr
            %td{colspan: '3', style: 'padding: 30px 0; font-size: 17px; line-height: 24px;'}
              %div{style: 'padding: 0 0 25px; font-size: 26px;'}
                %b= "#{t(:hello).capitalize}, #{@resource.email}"
              = t('.request_reset_link_msg')
          %tr
            %td{align: 'center', colspan: '2', style: 'padding: 0 0 20px 0;'}
              = link_to edit_password_url(@resource, reset_password_token: @token, config: message['client-config'].to_s, redirect_url: message['redirect-url'].to_s).html_safe, style: 'backgroun: #000; border: 2px solid #000;  text-decoration: none; display: block; width: 200px; height: 40px; text-align: center; border-radius: 6px;', target: '_blank' do
                %b{style: 'font-size: 14px; line-height: 40px; color: #000;'} Reset password
          %tr
            %td{align: 'center', colspan: '2', style: 'padding: 25px 8px 10px; font-size: 14px; color: #fff;'}
